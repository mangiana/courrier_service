<div id="content_picture">
    <%= image_tag 'picture.png', alt: 'Picture not found', id: 'picture' %>
</div>

<div id="ontop_circle">
<strong>We will <br> Deliver <br> for you!</strong>
</div>

<div id="right_side_content2">
  <h1>Log In</h1>
  <div id="form_container2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>          
      <div class="form_field2">
        <%= f.label :email,"Email:", class: "lab2" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "input_box2" %>
      </div>

      <div class="form_field2">
        <%= f.label :password, "Password:", class: "lab2" %><br>
        <%= f.password_field :password, autocomplete: "current-password",class: "input_box2"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="check_field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div id="btn_div2">
        <%= f.submit "Log In", id: "btn2"%>
        <%= link_to "Sign up", new_registration_path(resource_name), id:"link2"%>
        <%= link_to "Forgot your password?", new_password_path(resource_name), id:"link3" %>
      </div>
    <% end %>
    
  </div>    
</div>
